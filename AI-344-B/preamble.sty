% Colours for the Footer and Heading
\setbeamercolor{section in head/foot}{
    fg=MinimalAccent, 
    bg=DarkBackground
} 
\setbeamercolor{subsection in head/foot}{
    fg=MinimalAccent,
    bg=DarkBackground
} 
\setbeamercolor{institute in head/foot}{
    fg=MinimalAccent, 
    bg=DarkBackground
}
\setbeamercolor{footline}{
    fg=MinimalAccent, 
    bg=CustomBackground
}
\setbeamercolor{title in foot}{
    fg=MinimalAccent
}

% Global Background and Normal Text
\setbeamercolor{background canvas}{bg=CustomBackground}
\setbeamercolor{normal text}{fg=CustomText}
\setbeamercolor{structure}{fg=MinimalAccent, bg=CustomBackground}
\setbeamercolor{title page}{fg=CustomText, bg=CustomBackground}
\setbeamercolor{frametitle}{fg=CustomText, bg=CustomBackground}

% Separation Lines Colours
\setbeamercolor{separation line}{bg=DarkBackground}
\setbeamercolor{lower separation line head}{bg=DarkBackground}
\setbeamercolor{upper separation line foot}{bg=DarkBackground}
\setbeamercolor{lower separation line foot}{bg=DarkBackground}

% Remove navigation symbols for a cleaner look
\setbeamertemplate{navigation symbols}{} 

